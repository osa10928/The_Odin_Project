<body>
	<p>
		<%= form_for @user do |f| %> 
			<%= f.label :username, "User Name" %>
			<%= f.text_field :username %><br>
			<%= f.label :email, "Email" %>
			<%= f.text_field :email, :value => "(enter email here)" %><br>
			<%= f.label :password, "Password" %>
			<%= f.password_field :password %><br>
			<%= f.submit "Submit" %>
		<% end %>
	</p>


